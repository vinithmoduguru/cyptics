# Example environment variables for Crypto Dashboard Backend
# Copy to .env and fill in real secrets. NEVER commit real credentials.

APP_NAME="Crypto Dashboard API"
DEBUG=false

# SQLite (local dev alternative)
# DATABASE_URL="sqlite+aiosqlite:///./crypto_dashboard.db"

# Supabase pooled Postgres (async SQLAlchemy)
# Replace <PASSWORD> with your rotated database password.
DATABASE_URL="postgresql+asyncpg://postgres:<PASSWORD>@aws-0-ap-south-1.pooler.supabase.com:6543/postgres?sslmode=require"

COINGECKO_API_URL="https://api.coingecko.com/api/v3"
# Optional API key (improves rate limits)
COINGECKO_API_KEY=""

RATE_LIMIT_REQUESTS_PER_MINUTE=30
CACHE_TTL_SECONDS=300

# CORS origins (comma separated)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
